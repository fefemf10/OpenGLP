#version 330 core

struct Light {
    vec3 position;
    vec3 ambient;
    vec3 diffuse;
	float constant;
	float linear;
	float quadratic;
};

struct SpotLight {
    vec3 position;
	vec3 direction;
	float cutOff;
};

in vec3 UV;
in vec3 normal;
in vec3 fragPos;
out vec4 color;

uniform Light light;
uniform SpotLight spotlight;
uniform sampler2DArray textureSampler;

void main()
{
	color = texture(textureSampler, UV);
}